<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
  <configuration>
    <!-- report theme -->
    <!-- standard, dark -->
    <theme>dark</theme>
  
  	<!-- viewstyle -->
        <!-- alt-view -->
        <viewstyle>alt-view</viewstyle>
    <!-- document encoding -->
    <!-- defaults to UTF-8 -->
    <encoding>UTF-8</encoding>
    
     <!-- offline report -->
        <enableOfflineMode>false</enableOfflineMode>
		
        <!-- enable or disable timeline on dashboard -->
        <enableTimeline>false</enableTimeline>
    
    <!-- protocol for script and stylesheets -->
    <!-- defaults to https -->
    <protocol>https</protocol>
    
    <!-- title of the document -->
		<documentTitle>UI Automation Report</documentTitle>
		
	<!-- report name - displayed at top-nav -->
		<reportName>
		 <![CDATA[
                <img src='..\..\src\test\resources\images\sample-logo.png' />
            ]]>
		</reportName>
    
   <!-- report headline - displayed at top-nav, after reportHeadline -->
		<reportHeadline>UI Automation Report</reportHeadline>
    
    <!-- global date format override -->
    <!-- defaults to yyyy-MM-dd -->
    <dateFormat>yyyy-MM-dd</dateFormat>
    
    <!-- global time format override -->
    <!-- defaults to HH:mm:ss -->
    <timeFormat>HH:mm:ss</timeFormat>
    
    <!-- custom javascript -->
   <!-- custom javascript -->
		<scripts>
      <![CDATA[
        $(document).ready(function() {
          $('a.brand-logo')[0].innerText='UI Automation Report'
        });
      ]]>
		</scripts>
 
		<!-- custom styles -->
		<styles>
            <![CDATA[
                nav .brand-logo {
			        font-size: 12px;
			        padding-left: 15px;
			        position: relative;
			        margin-left: 20px;
			        margin-right: 20px;
			        font-weight: 600;
			        width: 145px;
			        padding-top: 1px;
			    }
			  
			    .report-name { padding-left: 10px; } .report-name > img { float: left;height: 50%;margin-left: 20px;margin-top: 12px;width: auto; }
            ]]>
		</styles>
  </configuration>
</extentreports>


